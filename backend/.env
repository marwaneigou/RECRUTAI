# Smart Recruitment Platform Backend Environment
NODE_ENV=development
PORT=3000
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-2024-smart-recruit
BCRYPT_ROUNDS=12
DATABASE_URL=postgresql://smart_admin:secret@localhost:5432/smart_recruit
MONGODB_URL=mongodb://localhost:27017/srp
MONGODB_URI=mongodb://localhost:27017/srp
CORS_ORIGIN=http://localhost:3001
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
HELMET_ENABLED=true
TRUST_PROXY=false

# File Upload
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf
