# Global OpenAI Configuration for all RECRUTAI services
OPENAI_API_KEY=sk-proj-E---QA

# Service Ports
ANALYSIS_SERVICE_PORT=5002
MATCHING_SERVICE_PORT=5001
DOCUMENT_SERVICE_PORT=5003
RECOMMENDATION_SERVICE_PORT=5004
USER_MANAGEMENT_PORT=5005
NOTIFICATION_SERVICE_PORT=5006

# AI Configuration - Optimized for token efficiency
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_TEMPERATURE=0.1
OPENAI_MAX_TOKENS=500

# Service Configuration
DEBUG=True
LOG_LEVEL=INFO
FLASK_ENV=development

# Database Configuration
DATABASE_URL=mongodb://localhost:27017/recrutai
POSTGRES_URL=postgresql://localhost:5432/recrutai

# Security
SECRET_KEY=recrutai_secret_key_2024
JWT_SECRET_KEY=recrutai_jwt_secret_2024
JWT_EXPIRATION_HOURS=24

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Email Configuration (for notifications)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_email_password

# File Storage
UPLOAD_FOLDER=uploads
MAX_FILE_SIZE=10485760  # 10MB

# Monitoring
ENABLE_METRICS=True
METRICS_PORT=9090

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
