# Smart Recruitment Platform - Environment Variables

# Application
NODE_ENV=development
FLASK_ENV=development

# Backend API
BACKEND_PORT=3000
JWT_SECRET=dev-jwt-secret-key-change-in-production

# PostgreSQL Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=smart_recruit
POSTGRES_USER=smart_admin
POSTGRES_PASSWORD=secret

# MongoDB Configuration
MONGO_ROOT_USER=root
MONGO_ROOT_PASSWORD=secret
MONGO_DB=srp
MONGO_PORT=27017
MONGODB_URI=mongodb://root:secret@localhost:27017/srp?authSource=admin

# Redis Configuration
REDIS_PORT=6379
REDIS_URL=redis://localhost:6379

# AI Services Configuration
OPENAI_API_KEY=

# File Upload Configuration
MAX_FILE_SIZE=10MB
UPLOAD_PATH=./uploads

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET=dev-session-secret-key

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=http://localhost:3001,http://localhost:3000

# Development/Production flags
DEBUG=true
ENABLE_SWAGGER=true
